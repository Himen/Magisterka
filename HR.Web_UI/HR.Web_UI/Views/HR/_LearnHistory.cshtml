@model IEnumerable<HR.Web_UI.Models.ViewModels.HR.CollegesViewModel>
@using HR.Web_UI.Models.ViewModels.HR;
@{
    ViewBag.Title = "_LearnHistory";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Kierunek</th>
            <th>Specializacja</th>
            <th>Tytuł naukowy</th>
            <th>Tytuł pracy naukowej</th>
            <th>Postęp</th>
            <th>Od</th>
            <th>Do</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.FieldOfStudy</td>
                <td>@item.Specialization</td>
                <td>@item.AcademicTitle</td>
                <td>@item.TitleOfResearch</td>
                <td>@item.Progres</td>
                <td>@item.StartDate</td>
                <td>@item.EndDate</td>           
            </tr>
        }
    </tbody>
</table>


<button class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg">Dodaj nowa uczelnie</button>

<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Dodaj uczelnie</h4>
            </div>
            <div class="modal-body">
                @Html.Partial("AddCollage", new CollegesViewModel())
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Wróć</button>
            </div>
        </div>
    </div>
</div>

<script>
    $('#myModal').modal('show');
</script>

